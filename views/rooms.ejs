<!-- views/rooms.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Rooms</title>
    <link rel="stylesheet" href="/css/style.css">
    <!-- Tailwind CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-950">
    <div class="rooms-page-container container mx-auto px-4 py-8">
        
        <!-- Navigation Bar with "View Favorites" Button -->
        <button
            onclick="window.location.href='/favorites'"
            class="btn btn-primary"
          >
            View Favorites
          </button>

        <h1 class="text-4xl font-bold text-center mb-8 text-white">Available Hotel Rooms</h1>

        <!-- Display Success or Error Messages -->
        <% if (typeof message !== 'undefined') { %>
            <div class="mb-6 text-center">
                <p class="text-green-500"><%= message %></p>
            </div>
        <% } %>

        <!-- Filter Form -->
        <form method="GET" action="/rooms" class="mb-6 flex justify-center">
            <div class="flex items-center space-x-2">
                <label for="beds" class="text-white">Sort by number of beds:</label>
                <select id="beds" name="beds" class="select select-bordered w-full max-w-xs bg-gray-800 text-white" onchange="this.form.submit()">
                    <option disabled <%= !selectedBeds ? 'selected' : '' %>>Pick number of beds</option>
                    <% for(let i = 1; i <= 10; i++) { %>
                        <option value="<%= i %>" <%= selectedBeds === i ? 'selected' : '' %>><%= i %></option>
                    <% } %>
                </select>
            </div>
        </form>

        <!-- Room Listings -->
        <div class="hotel-card-container grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% if (rooms && rooms.length > 0) { %>
                <% rooms.forEach(room => { %>
                    <div class="card bg-white shadow-md rounded-lg overflow-hidden">
                        <figure>
                            <img
                                src="<%= room.images.picture_url || '/images/default-room.jpg' %>"
                                alt="<%= room.name %>"
                                class="w-full h-48 object-cover"
                            />
                        </figure>
                        <div class="p-4">
                            <h2 class="text-2xl font-semibold mb-2 text-gray-800">
                                <%= room.name %>
                                <span
                                    class="inline-block bg-blue-500 text-white text-xs px-2 py-1 rounded-full ml-2"
                                >NEW</span>
                            </h2>
                            <p class="text-gray-600 mb-4">
                                <%= room.summary.substring(0, 100) %>...
                            </p>
                            <div class="flex justify-between items-center mb-4">
                                <span
                                    class="bg-green-200 text-green-800 text-xs px-2 py-1 rounded"
                                >Property Type: <%= room.property_type %></span>
                                <span
                                    class="bg-purple-200 text-purple-800 text-xs px-2 py-1 rounded"
                                >Room Type: <%= room.room_type %></span>
                            </div>
                            <div class="flex space-x-2">
                                <a
                                    href="/rooms/<%= room._id %>"
                                    class="flex-1 bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition duration-200 text-center"
                                >View Listing</a>
                                <form action="/rooms/<%= room._id %>/favorite" method="POST" class="flex-1">
                                    <button type="submit" class="w-full bg-yellow-500 text-white py-2 rounded hover:bg-yellow-600 transition duration-200">Add to Favorite</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-center col-span-full text-gray-700">
                    No rooms available at the moment.
                </p>
            <% } %>
        </div>

        <!-- Pagination Controls -->
        <div class="flex justify-center items-center mt-8 space-x-4">
            <% if (currentPage > 1) { %>
                <a
                    href="/rooms?page=<%= currentPage - 1 %>&limit=<%= limit %><%= selectedBeds ? '&beds=' + selectedBeds : '' %>"
                    class="px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400"
                >Previous</a>
            <% } else { %>
                <span
                    class="px-4 py-2 bg-gray-200 text-gray-500 rounded cursor-not-allowed"
                >Previous</span>
            <% } %>

            <span class="px-4 py-2 bg-gray-200 text-gray-700 rounded">
                Page <%= currentPage %> of <%= totalPages %>
            </span>

            <% if (currentPage < totalPages) { %>
                <a
                    href="/rooms?page=<%= currentPage + 1 %>&limit=<%= limit %><%= selectedBeds ? '&beds=' + selectedBeds : '' %>"
                    class="px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400"
                >Next</a>
            <% } else { %>
                <span
                    class="px-4 py-2 bg-gray-200 text-gray-500 rounded cursor-not-allowed"
                >Next</span>
            <% } %>
        </div>
    </div>
</body>
</html>
